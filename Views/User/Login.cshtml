@model CertfProj.Models.User
@{
    ViewData["Title"] = "Login";
}

<h1>Вход</h1>

<form method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info">Введите ваши данные</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Id">Введите ваш индфикационный номер</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Password">Введите ваш пароль</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Password" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Login" />
                        </div>
                        <div class="col">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-success w-100"> <i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>